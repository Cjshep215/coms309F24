<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:minWidth="328dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Activity Feed"
            android:textColor="@color/Iowa_State_Red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/groupIdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Group ID"
            app:boxStrokeColor="@color/Iowa_State_Red"
            app:hintTextColor="@color/Iowa_State_Red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/groupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp"
                android:minHeight="48dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Type"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/activityTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:theme="@style/RadioButtonStyle">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Activity"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Update"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioAchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Achievement"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Update"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="12dp"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testActivityButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Test Activity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:minHeight="56dp"
            android:padding="12dp"
            app:backgroundTint="@color/Iowa_State_Red"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>